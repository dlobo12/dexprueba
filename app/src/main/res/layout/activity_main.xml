    <Button
        android:id="@+id/btnTarjetas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="31dp"
        android:text="Tarjetas"
        app:layout_constraintBottom_toTopOf="@+id/btnGastos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnInfor"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFichar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="94dp"
        android:text="Fichar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnGastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInfor" />

    <Button
        android:id="@+id/btnGastos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="94dp"
        android:text="Gastos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnFichar"
        app:layout_constraintTop_toBottomOf="@+id/btnTarjetas" />

